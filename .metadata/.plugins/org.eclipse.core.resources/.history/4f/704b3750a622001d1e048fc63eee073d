//Thread 기본구조 테스트용 패키지
package thread_test;

import java.lang.reflect.Field;

public class ThreadMain {

	public static void main(String[] args) {
		Thread t1 = new Thread(new Data(10)); //Thread 객체 생성
		t1.setName("증가하는 쓰레드");
		t1.start(); //Thread 시작
		
		Thread t2 = new Thread(new Runnable() {

			@Override
			public void run() {
				Class<?> class1 = t1.getClass();
				try {
					Field f = class1.getField("str");
					System.out.println(f);
				} catch (NoSuchFieldException e) {
					// TODO 자동 생성된 catch 블록
					e.printStackTrace();
				} catch (SecurityException e) {
					// TODO 자동 생성된 catch 블록
					e.printStackTrace();
				}
			}
			
		});
		
		System.out.println("Thread 생성됨.");
		
		for(int i = 0; i <= 10; i++) {
			System.out.println("Main 다른 작업중:" + i);
		}
		
		System.out.println("Main 끝남");
		
	}

}
