package cal;

//부품 클래스들
class Add{ //더하기 클래스
	//기본생성자
	
	//실질적인 기능
	int add(int n1, int n2) {
		return n1 + n2;
	}

	double add(double n1, double n2) {
		return n1 + n2;
	}
}

class Sub{	//빼기 클래스
	
}

class Mul{	//곱하기 클래스
	
}

class Div{	//나누기 클래스
	
}

/*
 * 1개의 소스파일에 여러 클래스를 설계할 때
 * public은 반드시 1개의 클래스에만 붙일 수 있다.
 * 파일이름 = public붙은 클래스이름
 * (※public은 부품 클래스(Add,Sub,Mul,Div)에 붙이지 않기)
 * 
 * 만약 main() 클래스가 있다면
 * public은 무조건 main() 클래스에만 붙일 수 있다.
 * 파일이름 = main() 클래스이름
 */
public class Calculator { //계산기
	
	
	
}
